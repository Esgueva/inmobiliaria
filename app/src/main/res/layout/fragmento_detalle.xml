<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_orange_light">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:contentDescription="imagen"
            app:layout_constraintHorizontal_bias="0.446"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/piso5" />

        <TextView
            android:id="@+id/txtNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="nombre"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.444"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imgLogo" />

        <TextView
            android:id="@+id/txtUbicacion"
            android:layout_width="198dp"
            android:layout_height="20dp"
            android:layout_marginLeft="83dp"
            android:layout_marginTop="8dp"
            android:fontFamily="serif"
            android:text="ubicacion"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtNombre" />

        <TextView
            android:id="@+id/txtLocalizacion"
            android:layout_width="198dp"
            android:layout_height="20dp"
            android:layout_marginLeft="83dp"
            android:layout_marginTop="7dp"
            android:fontFamily="serif"
            android:text="localizacion"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtUbicacion" />

        <TextView
            android:id="@+id/txtNumHab"
            android:layout_width="199dp"
            android:layout_height="19dp"
            android:layout_marginLeft="83dp"
            android:layout_marginTop="7dp"
            android:fontFamily="serif"
            android:text="habitaciones"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtLocalizacion" />

        <TextView
            android:id="@+id/txtNumAseos"
            android:layout_width="198dp"
            android:layout_height="19dp"
            android:layout_marginLeft="83dp"
            android:layout_marginTop="7dp"
            android:fontFamily="serif"
            android:text="aseos"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtNumHab" />

        <TextView
            android:id="@+id/txtGaraje"
            android:layout_width="201dp"
            android:layout_height="22dp"
            android:layout_marginLeft="83dp"
            android:layout_marginTop="7dp"
            android:fontFamily="serif"
            android:text="garaje"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtTrastero" />

        <TextView
            android:id="@+id/txtTrastero"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_marginLeft="83dp"
            android:layout_marginTop="7dp"
            android:fontFamily="serif"
            android:text="trastero"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtNumAseos" />

        <TextView
            android:id="@+id/txtMetros"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_marginLeft="83dp"
            android:layout_marginTop="7dp"
            android:fontFamily="serif"
            android:text="metros"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtGaraje" />

        <TextView
            android:id="@+id/txtAntiguedad"
            android:layout_width="201dp"
            android:layout_height="19dp"
            android:layout_marginLeft="83dp"
            android:layout_marginTop="7dp"
            android:fontFamily="serif"
            android:text="antiguedad"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtMetros" />

        <TextView
            android:id="@+id/txtPrecio"
            android:layout_width="202dp"
            android:layout_height="21dp"
            android:layout_marginLeft="83dp"
            android:layout_marginTop="7dp"
            android:fontFamily="serif"
            android:text="precio"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtAntiguedad" />

    </android.support.constraint.ConstraintLayout>

</FrameLayout>
